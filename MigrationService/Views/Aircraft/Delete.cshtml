@model MigrationService.Models.Aircraft
@{
    ViewData["Title"] = "Удалить самолет";
}

<h2>Удалить самолет</h2>
<div class="alert alert-warning">Вы уверены, что хотите удалить борт <strong>@Model.TailNumber</strong>?</div>

@using (Html.BeginForm("Delete", "Aircraft", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.AircraftID)
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Отмена</a>
}


