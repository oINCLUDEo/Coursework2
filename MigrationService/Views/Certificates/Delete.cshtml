@model MigrationService.Models.Certificate
@{
    ViewData["Title"] = "Удалить сертификат";
}

<h2>Удалить сертификат</h2>
<div class="alert alert-warning">Удалить сертификат <strong>@Model.CertificateNumber</strong>?</div>

@using (Html.BeginForm("Delete", "Certificates", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.CertificateID)
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Отмена</a>
}



