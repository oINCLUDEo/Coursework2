@model MigrationService.Models.Migrant

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title mb-0">Информация о мигранте</h2>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">ФИО</dt>
                                <dd class="col-sm-8">@Model.FullName</dd>

                                <dt class="col-sm-4">Номер паспорта</dt>
                                <dd class="col-sm-8">@Model.PassportNumber</dd>

                                <dt class="col-sm-4">Пол</dt>
                                <dd class="col-sm-8">@(Model.Gender == "Male" ? "Мужской" : "Женский")</dd>

                                <dt class="col-sm-4">Номер телефона</dt>
                                <dd class="col-sm-8">@Model.PhoneNumber</dd>

                                <dt class="col-sm-4">Дата рождения</dt>
                                <dd class="col-sm-8">@Model.BirthDate?.ToShortDateString()</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Адрес</dt>
                                <dd class="col-sm-8">@Model.Address</dd>

                                <dt class="col-sm-4">Страна</dt>
                                <dd class="col-sm-8">@Model.Country?.CountryName</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <h4 class="mb-3">Языки</h4>
                            @if (Model.MigrantLanguages != null && Model.MigrantLanguages.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-sm table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Язык</th>
                                                <th>Уровень владения</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var lang in Model.MigrantLanguages)
                                            {
                                                <tr>
                                                    <td>@lang.Language?.LanguageName</td>
                                                    <td>@(lang.ProficiencyLevel switch {
                                                        "Beginner" => "Начинающий",
                                                        "Intermediate" => "Средний",
                                                        "Advanced" => "Продвинутый",
                                                        "Fluent" => "Свободный",
                                                        _ => lang.ProficiencyLevel
                                                    })</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">Языки не указаны</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@Model.MigrantID" class="btn btn-primary">Редактировать</a>
                        <a asp-action="Index" class="btn btn-secondary">Назад</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>