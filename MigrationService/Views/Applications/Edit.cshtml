@using MigrationService.Models
@model MigrationService.Models.Application

@{
    ViewData["Title"] = "Edit Application";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Edit Application</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-route-id="@Model.ApplicationID" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ApplicationID" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="MigrantID" class="control-label">Migrant</label>
                            <select asp-for="MigrantID" class="form-select" asp-items="ViewBag.MigrantID">
                                <option value="">-- Select Migrant --</option>
                            </select>
                            <span asp-validation-for="MigrantID" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="OfficerID" class="control-label">Officer</label>
                            <select asp-for="OfficerID" class="form-select" asp-items="ViewBag.OfficerID">
                                <option value="">-- Select Officer --</option>
                            </select>
                            <span asp-validation-for="OfficerID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Type" class="control-label">Application Type</label>
                            <select asp-for="Type" class="form-select" required>
                                <option value="">-- Select Type --</option>
                                <option value="Visa">Visa</option>
                                <option value="Residence">Residence</option>
                                <option value="Citizenship">Citizenship</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Status" class="control-label">Status</label>
                            <select asp-for="Status" class="form-select" required>
                                <option value="">-- Select Status --</option>
                                <option value="Pending">Pending</option>
                                <option value="In Progress">In Progress</option>
                                <option value="Approved">Approved</option>
                                <option value="Rejected">Rejected</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="SubmissionDate" class="control-label">Submission Date</label>
                            <input asp-for="SubmissionDate" class="form-control" type="datetime-local" required />
                            <span asp-validation-for="SubmissionDate" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="DecisionDate" class="control-label">Decision Date</label>
                            <input asp-for="DecisionDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="DecisionDate" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="statusComment" class="control-label">Status Comment (Optional)</label>
                            <textarea id="statusComment" name="statusComment" class="form-control" rows="3" placeholder="Enter your comment about the status change (optional)"></textarea>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            // Validate that DecisionDate is after SubmissionDate
            $('form').submit(function (e) {
                var submissionDate = new Date($('#SubmissionDate').val());
                var decisionDate = new Date($('#DecisionDate').val());
                
                if ($('#DecisionDate').val() && decisionDate < submissionDate) {
                    e.preventDefault();
                    alert('Decision Date must be after Submission Date');
                    return false;
                }
                return true;
            });
        });
    </script>
} 