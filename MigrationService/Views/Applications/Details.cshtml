@using MigrationService.Models
@model MigrationService.Models.Application

@{
    ViewData["Title"] = "Application Details";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Application Details</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Application ID</dt>
                        <dd class="col-sm-8">@Model.ApplicationID</dd>

                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">@Model.Type</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">@Model.Status</dd>

                        <dt class="col-sm-4">Submission Date</dt>
                        <dd class="col-sm-8">@Model.SubmissionDate.ToString("g")</dd>

                        <dt class="col-sm-4">Decision Date</dt>
                        <dd class="col-sm-8">
                            @(Model.DecisionDate?.ToString("g") ?? "Not Resolved")
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Migrant</dt>
                        <dd class="col-sm-8">@Model.Migrant?.FullName</dd>

                        <dt class="col-sm-4">Officer</dt>
                        <dd class="col-sm-8">@Model.Officer?.FullName</dd>
                    </dl>
                </div>
            </div>

            <div class="mt-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3>Documents</h3>
                    <a asp-controller="Documents" asp-action="Upload" asp-route-id="@Model.ApplicationID" class="btn btn-primary">
                        <i class="fas fa-upload"></i> Upload Document
                    </a>
                </div>

                @if (Model.Documents != null && Model.Documents.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>File Name</th>
                                    <th>Type</th>
                                    <th>Upload Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var doc in Model.Documents)
                                {
                                    <tr>
                                        <td>@doc.FileName</td>
                                        <td>@doc.FileType</td>
                                        <td>@doc.UploadedAt.ToString("g")</td>
                                        <td>
                                            <a asp-controller="Documents" asp-action="Download" asp-route-id="@doc.DocumentID" class="btn btn-sm btn-info">
                                                <i class="fas fa-download"></i> Download
                                            </a>
                                            <form asp-controller="Documents" asp-action="Delete" asp-route-id="@doc.DocumentID" method="post" style="display: inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this document?');">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No documents have been uploaded for this application yet.
                    </div>
                }
            </div>

            <div class="mt-4">
                <h4>Status History</h4>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Comment</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var change in Model.StatusChanges.OrderByDescending(s => s.ChangedAt))
                        {
                            <tr>
                                <td>@change.ChangedAt.ToString("g")</td>
                                <td>@change.Status</td>
                                <td>@change.Comment</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.ApplicationID" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div> 