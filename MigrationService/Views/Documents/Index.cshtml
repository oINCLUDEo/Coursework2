@model IEnumerable<MigrationService.Models.Document>

@{
    ViewData["Title"] = "Документы";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2>Документы</h2>
            <div>
                <a asp-controller="Applications" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Вернуться к заявкам
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Имя файла</th>
                                <th>Тип</th>
                                <th>Заявка</th>
                                <th>Мигрант</th>
                                <th>Дата загрузки</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FileName.Replace($"{item.DocumentID}_", "")</td>
                                    <td>@item.FileType</td>
                                    <td>
                                        <a asp-controller="Applications" asp-action="Details" asp-route-id="@item.ApplicationID">
                                            Заявка #@item.ApplicationID
                                        </a>
                                    </td>
                                    <td>@item.Application?.Migrant?.FullName</td>
                                    <td>@item.UploadedAt.ToString("g")</td>
                                    <td>
                                        <a asp-action="Download" asp-route-id="@item.DocumentID" class="btn btn-sm btn-info">
                                            <i class="fas fa-download"></i> Скачать
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.DocumentID" method="post" style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Вы уверены, что хотите удалить этот документ?');">
                                                <i class="fas fa-trash"></i> Удалить
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Документы еще не были загружены.
                </div>
            }
        </div>
    </div>
</div> 