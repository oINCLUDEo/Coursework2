@model MigrationService.Models.Migrant

@{
    ViewBag.Title = "Редактировать мигранта";
    var languages = ViewBag.Languages as List<MigrationService.Models.Language>;
    int[] selected = ViewBag.SelectedLanguages as int[];
}

<h2>Редактировать мигранта</h2>

<form asp-action="Edit" method="post" class="mt-4">
    <input type="hidden" asp-for="MigrantID" />
    
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="FullName" class="form-label">Имя</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PassportNumber" class="form-label">Паспорт</label>
                <input asp-for="PassportNumber" class="form-control" />
                <span asp-validation-for="PassportNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Gender" class="form-label">Gender</label>
                <select asp-for="Gender" class="form-select">
                    <option value="">-- Select Gender --</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" type="tel" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CountryID" class="form-label">Страна</label>
                <select asp-for="CountryID" class="form-control" asp-items="ViewBag.CountryList">
                    <option value="">-- выберите страну --</option>
                </select>
                <span asp-validation-for="CountryID" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="BirthDate" class="form-label">Дата рождения</label>
                <input asp-for="BirthDate" type="date" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Address" class="form-label">Адрес</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Языки</label>
        <div class="row">
            @if (languages != null && languages.Any())
            {
                @foreach (var lang in languages)
                {
                    <div class="col-md-4 mb-2">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="selectedLanguages" 
                                   value="@lang.LanguageID" id="lang_@lang.LanguageID" 
                                   @(selected.Contains(lang.LanguageID) ? "checked" : "") />
                            <label class="form-check-label" for="lang_@lang.LanguageID">
                                @lang.LanguageName
                            </label>
                        </div>
                        @if (selected.Contains(lang.LanguageID))
                        {
                            <div class="ms-4 mt-1">
                                <select name="proficiencyLevels[@lang.LanguageID]" class="form-select form-select-sm">
                                    <option value="Beginner">Beginner</option>
                                    <option value="Intermediate">Intermediate</option>
                                    <option value="Advanced">Advanced</option>
                                    <option value="Fluent">Fluent</option>
                                </select>
                            </div>
                        }
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p class="text-muted">Нет доступных языков для выбора.</p>
                </div>
            }
        </div>
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('input[type="checkbox"]').change(function() {
                var langId = $(this).val();
                var proficiencySelect = $(this).closest('.col-md-4').find('select');
                
                if ($(this).is(':checked')) {
                    if (proficiencySelect.length === 0) {
                        $(this).closest('.col-md-4').append(
                            '<div class="ms-4 mt-1">' +
                            '<select name="proficiencyLevels[' + langId + ']" class="form-select form-select-sm">' +
                            '<option value="Начальный">Начальный</option>' +
                            '<option value="Средний">Средний</option>' +
                            '<option value="Продвинутый">Продвинутый</option>' +
                            '</select>' +
                            '</div>'
                        );
                    }
                } else {
                    proficiencySelect.closest('div').remove();
                }
            });
        });
    </script>
}
