@model MigrationService.Models.Language

@{
    ViewData["Title"] = "Информация о языке";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Информация о языке</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.LanguageName)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.LanguageName)</dd>
            </dl>

            <h3 class="mt-4">Мигранты, владеющие этим языком</h3>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ФИО мигранта</th>
                            <th>Уровень владения</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var migrantLanguage in Model.MigrantLanguages)
                        {
                            <tr>
                                <td>@migrantLanguage.Migrant.FullName</td>
                                <td>@migrantLanguage.ProficiencyLevel</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="btn-group">
                <a asp-action="Edit" asp-route-id="@Model.LanguageID" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Редактировать
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Назад к списку
                </a>
            </div>
        </div>
    </div>
</div> 