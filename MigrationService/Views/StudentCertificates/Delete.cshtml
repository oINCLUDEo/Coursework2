@model MigrationService.Models.StudentCertificate
@{
    ViewData["Title"] = "Удалить выданный сертификат";
}

<h2>Удалить выданный сертификат</h2>
<div class="alert alert-warning">
    Удалить сертификат <strong>@Model.Certificate?.Title</strong> для курсанта <strong>@Model.Student?.FullName</strong>?
</div>

@using (Html.BeginForm("Delete", "StudentCertificates", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.StudentCertificateID)
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Отмена</a>
}


