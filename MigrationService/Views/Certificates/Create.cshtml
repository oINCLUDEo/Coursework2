@model MigrationService.Models.Certificate
@{
    ViewData["Title"] = "Создать шаблон сертификата";
}

<h2>Создать шаблон сертификата</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <div class="mb-3">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.CourseID, "Связанный курс")
        @Html.DropDownListFor(m => m.CourseID, (SelectList)ViewBag.Courses, "Без привязки", new { @class = "form-select" })
        @Html.ValidationMessageFor(m => m.CourseID, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.DefaultValidityDays)
        @Html.TextBoxFor(m => m.DefaultValidityDays, new { @class = "form-control", type = "number", min = "1" })
        <small class="form-text text-muted">Используется как подсказка при выдаче сертификата курсантам.</small>
        @Html.ValidationMessageFor(m => m.DefaultValidityDays, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Отмена</a>
}
