@model MigrationService.Controllers.SearchResults

@{
    ViewData["Title"] = "Search Results";
}

<div class="container mt-4">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="fas fa-search me-2"></i>Search Results for "@Model.Query"
            </h5>
        </div>
        <div class="card-body">
            @if (string.IsNullOrWhiteSpace(Model.Query))
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>Please enter a search term to find applications, migrants, or documents.
                </div>
            }
            else
            {
                <div class="row">
                    @if (Model.Migrants?.Any() == true)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-primary text-white">
                                    <h6 class="mb-0"><i class="fas fa-users me-2"></i>Migrants</h6>
                                </div>
                                <div class="card-body p-0">
                                    <div class="list-group list-group-flush">
                                        @foreach (var migrant in Model.Migrants)
                                        {
                                            <a href="@Url.Action("Details", "Migrants", new { id = migrant.MigrantID })" class="list-group-item list-group-item-action">
                                                <div class="d-flex w-100 justify-content-between">
                                                    <h6 class="mb-1">@migrant.FullName</h6>
                                                    <small>@migrant.PassportNumber</small>
                                                </div>
                                                <small class="text-muted">@migrant.PhoneNumber</small>
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (Model.Applications?.Any() == true)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-success text-white">
                                    <h6 class="mb-0"><i class="fas fa-file-alt me-2"></i>Applications</h6>
                                </div>
                                <div class="card-body p-0">
                                    <div class="list-group list-group-flush">
                                        @foreach (var application in Model.Applications)
                                        {
                                            <a href="@Url.Action("Details", "Applications", new { id = application.ApplicationID })" class="list-group-item list-group-item-action">
                                                <div class="d-flex w-100 justify-content-between">
                                                    <h6 class="mb-1">@application.Migrant.FullName</h6>
                                                    <span class="badge bg-@(application.Status == "Approved" ? "success" : 
                                                                                application.Status == "Rejected" ? "danger" : 
                                                                                application.Status == "In Progress" ? "info" : "warning")">
                                                        @application.Status
                                                    </span>
                                                </div>
                                                <small class="text-muted">@application.Type - @application.SubmissionDate.ToString("dd.MM.yyyy")</small>
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (Model.Documents?.Any() == true)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-info text-white">
                                    <h6 class="mb-0"><i class="fas fa-file me-2"></i>Documents</h6>
                                </div>
                                <div class="card-body p-0">
                                    <div class="list-group list-group-flush">
                                        @foreach (var document in Model.Documents)
                                        {
                                            <a href="@Url.Action("Details", "Documents", new { id = document.DocumentID })" class="list-group-item list-group-item-action">
                                                <div class="d-flex w-100 justify-content-between">
                                                    <h6 class="mb-1">@document.FileName</h6>
                                                    <small>@document.FileType</small>
                                                </div>
                                                <small class="text-muted">@document.Application.Migrant.FullName - @document.UploadedAt.ToString("dd.MM.yyyy")</small>
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (Model.Migrants?.Any() != true && Model.Applications?.Any() != true && Model.Documents?.Any() != true)
                    {
                        <div class="col-12">
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle me-2"></i>No results found for "@Model.Query". Please try a different search term.
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .list-group-item {
            transition: background-color 0.2s;
        }
        .list-group-item:hover {
            background-color: #f8f9fa;
        }
    </style>
} 