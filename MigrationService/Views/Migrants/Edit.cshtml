@model MigrationService.Models.Migrant

@{
ViewBag.Title = "Редактировать мигранта";
var languages = ViewBag.Languages as List<MigrationService.Models.Language>;
int[] selected = ViewBag.SelectedLanguages as int[];
}

<h2>Редактировать мигранта</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="MigrantID" />
    <div class="form-group">
        <label>Имя</label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Паспорт</label>
        <input asp-for="PassportNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label>Страна</label>
        <select asp-for="CountryID" class="form-control" asp-items="ViewBag.CountryList">
            <option value="">-- выберите страну --</option>
        </select>
    </div>
    <div class="form-group">
        <label>Дата рождения</label>
        <input asp-for="BirthDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Адрес</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label>Языки</label><br />
        @if (languages != null && languages.Any())
        {
        @foreach (var lang in languages)
        {
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="selectedLanguages" value="@lang.LanguageID"
                   id="lang_@lang.LanguageID" @(selected.Contains(lang.LanguageID) ? "checked" : "") />
            <label class="form-check-label" for="lang_@lang.LanguageID">@lang.LanguageName</label>
        </div>
        }
        }
        else
        {
        <p>Нет доступных языков для выбора.</p>
        }
    </div>
    <button type="submit" class="btn btn-success">Обновить</button>
</form>
