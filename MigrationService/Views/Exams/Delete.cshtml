@model MigrationService.Models.Exam
@{
    ViewData["Title"] = "Удалить экзамен";
}

<h2>Удалить экзамен</h2>
<div class="alert alert-warning">Вы уверены, что хотите удалить экзамен @Model.Date.ToString("yyyy-MM-dd")?</div>

@using (Html.BeginForm("Delete", "Exams", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ExamID)
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Отмена</a>
}



