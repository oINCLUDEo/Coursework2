@model MigrationService.Models.Country

@{
    ViewData["Title"] = "Delete Country";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Delete Country</h2>
        </div>
        <div class="card-body">
            <h3>Are you sure you want to delete this country?</h3>
            <div>
                <dl class="row">
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CountryName)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.CountryName)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ISOCode)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.ISOCode)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.VisaRequired)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.VisaRequired)</dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="CountryID" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </form>
            </div>
        </div>
    </div>
</div> 