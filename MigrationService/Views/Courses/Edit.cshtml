@model MigrationService.Models.Course
@{
    ViewData["Title"] = "Изменить курс";
}

<h2>Изменить курс</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.CourseID)
    <div class="mb-3">@Html.LabelFor(m => m.Name) @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })</div>
    <div class="mb-3">@Html.LabelFor(m => m.Category) @Html.TextBoxFor(m => m.Category, new { @class = "form-control" })</div>
    <div class="mb-3">@Html.LabelFor(m => m.Description) @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })</div>
    <div class="mb-3">@Html.LabelFor(m => m.RequiredHours) @Html.TextBoxFor(m => m.RequiredHours, new { @class = "form-control", type = "number", step = "0.1" })</div>
    <div class="form-check mb-3">@Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" }) @Html.LabelFor(m => m.IsActive, new { @class = "form-check-label" })</div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Отмена</a>
}
