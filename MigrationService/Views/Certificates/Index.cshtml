@model IEnumerable<MigrationService.Models.Certificate>
@{
    ViewData["Title"] = "Шаблоны сертификатов";
}

<h2>Шаблоны сертификатов</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form method="get" class="row g-3 mb-3">
    <div class="col-md-6">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Поиск по названию или описанию" />
    </div>
    <div class="col-md-3">
        @Html.DropDownList("courseFilter", (SelectList)ViewBag.Courses, "Все курсы", new { @class = "form-select" })
    </div>
    <div class="col-md-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Фильтровать</button>
        <a class="btn btn-link" href="@Url.Action("Index")">Сбросить</a>
    </div>
    <div class="col-12">
        <a class="btn btn-success" href="@Url.Action("Create")">Создать шаблон</a>
        <a class="btn btn-outline-secondary" href="@Url.Action("Index", "StudentCertificates")">Перейти к выданным сертификатам</a>
    </div>
</form>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Название</th>
            <th>Курс</th>
            <th>Базовый срок (дней)</th>
            <th>Описание</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Title</td>
            <td>@(c.Course?.Name ?? "—")</td>
            <td>@(c.DefaultValidityDays?.ToString() ?? "—")</td>
            <td>@(string.IsNullOrWhiteSpace(c.Description) ? "—" : c.Description)</td>
            <td class="text-end">
                <a class="btn btn-sm btn-info" href="@Url.Action("Details", new { id = c.CertificateID })">Подробнее</a>
                <a class="btn btn-sm btn-secondary" href="@Url.Action("Edit", new { id = c.CertificateID })">Изменить</a>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = c.CertificateID })">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>
