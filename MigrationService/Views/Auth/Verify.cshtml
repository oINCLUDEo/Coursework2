@using Microsoft.AspNetCore.Hosting
@inject IWebHostEnvironment Environment
@{
    ViewData["Title"] = "Подтверждение";
}

<h2>Подтверждение кода</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (ViewBag.DevOtp != null && Environment.IsDevelopment())
{
    <div class="alert alert-info">DEV: Код подтверждения: <strong>@ViewBag.DevOtp</strong></div>
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Verify" method="post" class="mt-3">
    <div class="mb-3">
        <label for="code" class="form-label">Код из письма</label>
        <input type="text" id="code" name="code" class="form-control" maxlength="6" />
    </div>
    <button type="submit" class="btn btn-primary">Войти</button>
</form>


