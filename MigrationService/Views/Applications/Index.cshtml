@model IEnumerable<MigrationService.Models.Application>

@{
    ViewData["Title"] = "Applications";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Applications</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Add New Application
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" name="searchString" class="form-control" placeholder="Search by migrant name..." value="@ViewData["CurrentFilter"]">
                    </div>
                </div>
                <div class="col-md-3">
                    <select name="typeFilter" class="form-select">
                        <option value="">All Types</option>
                        @{
                            var typeFilter = ViewData["TypeFilter"]?.ToString();
                            <option value="Visa" selected="@(typeFilter == "Visa" ? "selected" : "")">Visa</option>
                            <option value="Residence" selected="@(typeFilter == "Residence" ? "selected" : "")">Residence</option>
                            <option value="Citizenship" selected="@(typeFilter == "Citizenship" ? "selected" : null)">Citizenship</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="statusFilter" class="form-select" multiple>
                        @{
                            var statusFilters = ViewData["StatusFilters"] as string[] ?? new string[0];
                            <option value="Pending" selected="@(statusFilters.Contains("Pending") ? "selected" : "")">Pending</option>
                            <option value="In Progress" selected="@(statusFilters.Contains("In Progress") ? "selected" : "")">In Progress</option>
                            <option value="Approved" selected="@(statusFilters.Contains("Approved") ? "selected" : "")">Approved</option>
                            <option value="Rejected" selected="@(statusFilters.Contains("Rejected") ? "selected" : "")">Rejected</option>
                        }
                    </select>
                    <small class="text-muted">Hold Ctrl/Cmd to select multiple statuses</small>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter"></i> Filter
                    </button>
                </div>
            </form>
            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()) || 
                 !string.IsNullOrEmpty(ViewData["TypeFilter"]?.ToString()) || 
                 !string.IsNullOrEmpty(ViewData["StatusFilter"]?.ToString()))
            {
                <div class="mt-3">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-times"></i> Clear Filters
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Migrant)</th>
                            <th>@Html.DisplayNameFor(model => model.Officer)</th>
                            <th>@Html.DisplayNameFor(model => model.Type)</th>
                            <th>@Html.DisplayNameFor(model => model.Status)</th>
                            <th>@Html.DisplayNameFor(model => model.SubmissionDate)</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Migrant.FullName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Officer.FullName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                                <td>
                                    @{
                                        string statusClass = item.Status switch
                                        {
                                            "Pending" => "bg-warning",
                                            "InProgress" => "bg-info",
                                            "Approved" => "bg-success",
                                            "Rejected" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@item.Status</span>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.SubmissionDate)</td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.ApplicationID" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.ApplicationID" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ApplicationID" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
} 