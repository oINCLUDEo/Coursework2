@model IEnumerable<MigrationService.Models.Certificate>
@{
    ViewData["Title"] = "Сертификаты";
}

<h2>Сертификаты</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form method="get" class="row g-3 mb-3">
    <div class="col-md-4">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Поиск по номеру/курсанту/курсу" />
    </div>
    <div class="col-md-3">
        @Html.DropDownList("studentFilter", (SelectList)ViewBag.Students, "Все курсанты", new { @class = "form-select" })
    </div>
    <div class="col-md-3">
        @Html.DropDownList("courseFilter", (SelectList)ViewBag.Courses, "Все курсы", new { @class = "form-select" })
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Фильтровать</button>
    </div>
    <div class="col-12">
        <a class="btn btn-success" href="@Url.Action("Create")">Добавить</a>
        <a class="btn btn-link" href="@Url.Action("Index")">Сбросить</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Дата выдачи</th>
            <th>Курсант</th>
            <th>Курс</th>
            <th>Номер</th>
            <th>Действителен до</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.IssuedDate.ToString("yyyy-MM-dd")</td>
            <td>@c.Student?.FullName</td>
            <td>@c.Course?.Name</td>
            <td>@c.CertificateNumber</td>
            <td>@c.ValidUntil?.ToString("yyyy-MM-dd")</td>
            <td>
                <a class="btn btn-sm btn-info" href="@Url.Action("Details", new { id = c.CertificateID })">Подробнее</a>
                <a class="btn btn-sm btn-secondary" href="@Url.Action("Edit", new { id = c.CertificateID })">Изменить</a>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = c.CertificateID })">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>



