@model MigrationService.Models.Aircraft
@{
    ViewData["Title"] = "Изменить самолет";
}

<h2>Изменить самолет</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.AircraftID)
    <div class="mb-3">@Html.LabelFor(m => m.TailNumber) @Html.TextBoxFor(m => m.TailNumber, new { @class = "form-control" })</div>
    <div class="mb-3">@Html.LabelFor(m => m.Model) @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })</div>
    <div class="mb-3">@Html.LabelFor(m => m.Type) @Html.TextBoxFor(m => m.Type, new { @class = "form-control" })</div>
    <div class="mb-3">@Html.LabelFor(m => m.Year) @Html.TextBoxFor(m => m.Year, new { @class = "form-control", type = "number" })</div>
    <div class="mb-3">@Html.LabelFor(m => m.TotalHours) @Html.TextBoxFor(m => m.TotalHours, new { @class = "form-control", type = "number", step = "0.1" })</div>
    <div class="mb-3">@Html.LabelFor(m => m.Status)
        @Html.DropDownListFor(m => m.Status, new SelectList(new[] {"Available","Maintenance","Unavailable"}), "Выберите...", new { @class = "form-select" })
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Отмена</a>
}
