@model IEnumerable<MigrationService.Models.Course>
@{
    ViewData["Title"] = "Курсы";
}

<h2>Курсы</h2>

<form method="get" class="row g-3 mb-3">
    <div class="col-md-4">
        <input type="text" name="search" value="@ViewData["Search"]" class="form-control" placeholder="Поиск по названию/категории" />
    </div>
    <div class="col-md-3 form-check align-self-center">
        <input type="checkbox" class="form-check-input" id="onlyActive" name="onlyActive" value="true" @(true.Equals(ViewData["OnlyActive"]) ? "checked" : "") />
        <label for="onlyActive" class="form-check-label">Только активные</label>
    </div>
    <div class="col-md-5">
        <button type="submit" class="btn btn-primary">Фильтровать</button>
        <a href="@Url.Action("Create")" class="btn btn-success">Добавить</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Название</th>
            <th>Категория</th>
            <th>Требуемые часы</th>
            <th>Активен</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Name</td>
            <td>@c.Category</td>
            <td>@c.RequiredHours</td>
            <td>@(c.IsActive ? "Да" : "Нет")</td>
            <td>
                <a class="btn btn-sm btn-secondary" href="@Url.Action("Edit", new { id = c.CourseID })">Изменить</a>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = c.CourseID })">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>


