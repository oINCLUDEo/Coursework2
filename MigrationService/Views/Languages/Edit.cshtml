@model MigrationService.Models.Language

@{
    ViewData["Title"] = "Edit Language";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Edit Language</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="LanguageID" />
                <div class="form-group">
                    <label asp-for="LanguageName" class="control-label"></label>
                    <input asp-for="LanguageName" class="form-control" />
                    <span asp-validation-for="LanguageName" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 