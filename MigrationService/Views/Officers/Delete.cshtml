@model MigrationService.Models.Officer

@{
    ViewData["Title"] = "Удалить сотрудника";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Удалить сотрудника</h2>
        </div>
        <div class="card-body">
            <h3>Вы уверены, что хотите удалить этого сотрудника?</h3>
            <div>
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FullName)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Position)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Position)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Login)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Login)</dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="OfficerID" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Удалить
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Вернуться к списку
                    </a>
                </form>
            </div>
        </div>
    </div>
</div> 