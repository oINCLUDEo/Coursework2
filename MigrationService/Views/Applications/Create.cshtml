@using MigrationService.Models
@model MigrationService.Models.Application

@{
    ViewData["Title"] = "Создать заявление";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Создать заявление</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Вернуться к списку
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="MigrantID" class="form-label">Мигрант</label>
                        <select asp-for="MigrantID" class="form-select" asp-items="ViewBag.MigrantID">
                            <option value="">-- Выберите мигранта --</option>
                        </select>
                        <span asp-validation-for="MigrantID" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="OfficerID" class="form-label">Сотрудник</label>
                        <select asp-for="OfficerID" class="form-select" asp-items="ViewBag.OfficerID">
                            <option value="">-- Выберите сотрудника --</option>
                        </select>
                        <span asp-validation-for="OfficerID" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Type" class="form-label">Тип заявления</label>
                        <select asp-for="Type" class="form-select">
                            <option value="Виза">Виза</option>
                            <option value="Вид на жительство">Вид на жительство</option>
                            <option value="Рабочая виза">Рабочая виза</option>
                            <option value="Студенческая виза">Студенческая виза</option>
                            <option value="Воссоединение семьи">Воссоединение семьи</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="Status" class="form-label">Статус</label>
                        <select asp-for="Status" class="form-select">
                            <option value="">-- Выберите статус --</option>
                            <option value="На рассмотрении">На рассмотрении</option>
                            <option value="Подано">Подано</option>
                            <option value="Одобрено">Одобрено</option>
                            <option value="Отклонено">Отклонено</option>
                            <option value="Требуются дополнительные документы">Требуются дополнительные документы</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Сохранить
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 