@model MigrationService.Models.Migrant

<h2>Информация о мигранте</h2>
<dl class="row">
    <dt class="col-sm-2">Имя</dt>
    <dd class="col-sm-10">@Model.FullName</dd>

    <dt class="col-sm-2">Паспорт</dt>
    <dd class="col-sm-10">@Model.PassportNumber</dd>

    <dt class="col-sm-2">Дата рождения</dt>
    <dd class="col-sm-10">@Model.BirthDate?.ToShortDateString()</dd>

    <dt class="col-sm-2">Адрес</dt>
    <dd class="col-sm-10">@Model.Address</dd>

    <dt class="col-sm-2">Страна</dt>
    <dd class="col-sm-10">@Model.Country?.CountryName</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.MigrantID" class="btn btn-primary">Редактировать</a>
<a asp-action="Index" class="btn btn-secondary">Назад</a>