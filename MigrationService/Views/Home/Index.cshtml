@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <div class="jumbotron bg-primary text-white text-center py-5 rounded">
        <h1 class="display-4">Migration Service</h1>
        <p class="lead">Welcome to the Migration Service Management System</p>
        <hr class="my-4 bg-white">
        <p>Manage migrants, applications, officers, countries, and languages all in one place.</p>
    </div>

    <div class="row mt-4">
        <div class="col-md-4 mb-4">
            <div class="card bg-info text-white h-100">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x mb-3"></i>
                    <h5 class="card-title">Migrants</h5>
                    <p class="card-text display-4">@ViewBag.MigrantsCount</p>
                    <a href="@Url.Action("Index", "Migrants")" class="btn btn-light">Manage Migrants</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card bg-success text-white h-100">
                <div class="card-body text-center">
                    <i class="fas fa-file-alt fa-3x mb-3"></i>
                    <h5 class="card-title">Applications</h5>
                    <p class="card-text display-4">@ViewBag.ApplicationsCount</p>
                    <a href="@Url.Action("Index", "Applications")" class="btn btn-light">Manage Applications</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card bg-warning text-white h-100">
                <div class="card-body text-center">
                    <i class="fas fa-user-tie fa-3x mb-3"></i>
                    <h5 class="card-title">Officers</h5>
                    <p class="card-text display-4">@ViewBag.OfficersCount</p>
                    <a href="@Url.Action("Index", "Officers")" class="btn btn-light">Manage Officers</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card bg-danger text-white h-100">
                <div class="card-body text-center">
                    <i class="fas fa-globe fa-3x mb-3"></i>
                    <h5 class="card-title">Countries</h5>
                    <p class="card-text display-4">@ViewBag.CountriesCount</p>
                    <a href="@Url.Action("Index", "Countries")" class="btn btn-light">Manage Countries</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card bg-secondary text-white h-100">
                <div class="card-body text-center">
                    <i class="fas fa-language fa-3x mb-3"></i>
                    <h5 class="card-title">Languages</h5>
                    <p class="card-text display-4">@ViewBag.LanguagesCount</p>
                    <a href="@Url.Action("Index", "Languages")" class="btn btn-light">Manage Languages</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .card {
            transition: transform 0.3s;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .jumbotron {
            background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .btn-light {
            transition: all 0.3s;
        }
        .btn-light:hover {
            background-color: #f8f9fa;
            transform: scale(1.05);
        }
    </style>
} 