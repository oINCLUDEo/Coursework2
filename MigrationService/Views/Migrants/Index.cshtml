@model IEnumerable<MigrationService.Models.Migrant>

@{
    ViewData["Title"] = "Мигранты";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Мигранты</h2>
        <a class="btn btn-primary" asp-action="Create">
            <i class="fas fa-plus-circle me-2"></i>Добавить мигранта
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">Поиск и фильтрация</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="searchString" class="form-label">Поиск</label>
                    <div class="input-group">
                        <input type="text" id="searchString" name="searchString" class="form-control" placeholder="Имя, паспорт, адрес..." value="@ViewData["CurrentFilter"]">
                        <button class="btn btn-outline-secondary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-3">
                    <label for="countryFilter" class="form-label">Страна</label>
                    <select id="countryFilter" name="countryFilter" class="form-select" asp-items="ViewBag.Countries">
                        <option value="">Все страны</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="languageFilter" class="form-label">Язык</label>
                    <select id="languageFilter" name="languageFilter" class="form-select" asp-items="ViewBag.Languages">
                        <option value="">Все языки</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter me-2"></i>Применить
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ФИО</th>
                            <th>Номер паспорта</th>
                            <th>Пол</th>
                            <th>Номер телефона</th>
                            <th>Дата рождения</th>
                            <th>Адрес</th>
                            <th>Страна</th>
                            <th>Языки</th>
                            <th class="text-end">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FullName</td>
                                <td>@item.PassportNumber</td>
                                <td>@item.Gender</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.BirthDate?.ToShortDateString()</td>
                                <td>@item.Address</td>
                                <td>@item.Country?.CountryName</td>
                                <td>
                                    @if (item.MigrantLanguages != null && item.MigrantLanguages.Any())
                                    {
                                        <div class="d-flex flex-wrap gap-1">
                                            @foreach (var migrantLanguage in item.MigrantLanguages)
                                            {
                                                <span class="badge bg-info">
                                                    @migrantLanguage.Language?.LanguageName - @migrantLanguage.ProficiencyLevel
                                                </span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Нет языков</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.MigrantID" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.MigrantID" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.MigrantID" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}
