@model MigrationService.Models.Certificate
@{
    ViewData["Title"] = "Удалить шаблон сертификата";
}

<h2>Удалить шаблон</h2>
<div class="alert alert-warning">
    Удалить шаблон <strong>@Model.Title</strong>? Все выданные по нему сертификаты будут удалены.
</div>

@using (Html.BeginForm("Delete", "Certificates", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.CertificateID)
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Отмена</a>
}



