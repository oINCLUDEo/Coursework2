@model MigrationService.Models.Application

@{
    ViewData["Title"] = "Удалить заявление";

    var typeDisplay = Model.Type switch
    {
        "Виза" => "Виза",
        "Вид на жительство" => "Вид на жительство",
        "Рабочая виза" => "Рабочая виза",
        "Студенческая виза" => "Студенческая виза",
        "Воссоединение семьи" => "Воссоединение семьи",
        _ => Model.Type
    };
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Удалить заявление</h2>
        </div>
        <div class="card-body">
            <h3>Вы уверены, что хотите удалить это заявление?</h3>
            <div>
                <dl class="row">
                    <dt class="col-sm-3">Мигрант</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Migrant.FullName)</dd>

                    <dt class="col-sm-3">Сотрудник</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Officer.FullName)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Type)</dt>
                    <dd class="col-sm-10">@typeDisplay</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
                    <dd class="col-sm-9">@Model.Status</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SubmissionDate)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.SubmissionDate)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DecisionDate)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DecisionDate)</dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ApplicationID" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Удалить
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Вернуться к списку
                    </a>
                </form>
            </div>
        </div>
    </div>
</div> 