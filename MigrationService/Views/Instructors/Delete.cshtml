@model MigrationService.Models.Instructor
@{
    ViewData["Title"] = "Удалить инструктора";
}

<h2>Удалить инструктора</h2>
<div class="alert alert-warning">Вы уверены, что хотите удалить: <strong>@Model.FullName</strong>?</div>

@using (Html.BeginForm("Delete", "Instructors", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.InstructorID)
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Отмена</a>
}


